<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/BorderLessButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/BorderLessButton</item>
        <item name="android:textViewStyle">@style/AppTextNormal</item>
        <item name="editTextStyle">@style/EditTextNormal</item>
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="android:buttonStyle">@style/ButtonTextNormal</item>
        <item name="actionMenuTextAppearance">@style/MenuTextNormal</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/darkSecondary</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
    </style>

    <style name="AppTheme.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TitleTextNormal" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="TitleTextMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/app_font_medium</item>
    </style>

    <style name="ButtonTextNormal" parent="@style/Base.Widget.AppCompat.Button">
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:textColor">@color/whitePrimary</item>
    </style>

    <style name="ButtonTextColored" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTextNormal" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/app_font_normal</item>
    </style>
    <style name="AppTextSecondary" parent="AppTextNormal">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="MenuTextNormal" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/app_font_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EditTextNormal" parent="@android:style/Widget.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/custom_edittext_drawable</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText.Normal" parent="HeaderText">
        <item name="android:textColor">@color/darkPrimary</item>
    </style>

    <style name="HeaderText.Colored" parent="HeaderText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="BorderLessButton" parent="ButtonTextColored">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:fontFamily">@font/app_font_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textViewStyle">@style/AppTextNormal</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

</resources>
