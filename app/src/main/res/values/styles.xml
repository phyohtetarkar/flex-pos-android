<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/BorderLessButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/BorderLessButton</item>
        <item name="titleTextAppearance">@style/TitleTextMedium</item>
        <item name="android:textViewStyle">@style/AppTextNormal</item>
        <item name="editTextStyle">@style/EditTextNormal</item>
        <item name="android:buttonStyle">@style/ButtonTextNormal</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TitleTextNormal" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="TitleTextMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/app_font_medium</item>
    </style>

    <style name="ButtonTextNormal" parent="@style/Base.Widget.AppCompat.Button">
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="ButtonTextColored" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTextNormal" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="EditTextNormal" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/app_font_normal</item>
        <item name="android:background">?attr/editTextBackground</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText.Normal" parent="HeaderText">
        <item name="android:textColor">@color/darkPrimary</item>
    </style>

    <style name="HeaderText.Colored" parent="HeaderText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/app_font_normal</item>
    </style>

    <style name="BorderLessButton" parent="ButtonTextColored">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
