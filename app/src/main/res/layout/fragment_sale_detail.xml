<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CheckoutBinding">
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCheckout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/checkout_sheet_peek_height"
            tools:listitem="@layout/layout_sale_item">

        </android.support.v7.widget.RecyclerView>

        <include layout="@layout/layout_checkout_sheet"
            android:id="@+id/checkoutSheet"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
